<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aurora - ERS</title>
</head>
<body>
    

    <header>
        <span>
            Welcome back: <%= locals.user.firstName %>
            <% if(locals.user.role === 'Admin'){ %>
                (Admin)    
            <% } %>
            </span>
        
        <% if(locals.user.role === 'Admin'){ %> 
            <span>Add Employee</span>
            <form action="/create-employee" method="POST">
                <input type="text" name="firstName" placeholder="Employee First Name" required>
                <input type="text" name="lastName" placeholder="Employee Last Name" required>
                <input type="text" name="ADID" placeholder="Employee ADID" required>
                <label>
                    <input type="radio" name="role" value="Admin">
                    Admin
                </label>
                <label>
                    <input type="radio" name="role" value="Associate">
                    Associate
                </label>
                <input type="submit">
            </form>
        <% } %>
        <a href="/logout">Logout</a>
    </header>
    
    <br><br><br>
    
    
    <% if(user.role === 'Admin'){ %>
        
    
        <div id="employees-list-container">
            <% for(let e of employeesList){ %> 
                <% if(e.ADID !== user.ADID){ %>
                    <p id="<%= e.ADID %>"><%= e.firstName %></p>
                    <button onclick="showContainer('<%= e.ADID %>', '<%= e.ADID %>-<%= e.role %>')"><%= e.ADID %></button>
                <% } %>
            <% } %>
        </div>
    
        
        <% for(let e of employeesList){ %> 
            <div id="more-details-container" class="more-details <%= e.ADID %>" style="display: none">

                <div id="delete-employee">
                    <form action="/destroy-user" method="POST">
                        <input type="hidden" name="ADID" value="<%= e.ADID %>">
                        <input type="submit" value="Delete">
                    </form>
                </div>

                <!-- <button id="delete-employee" onclick="changeDeleteWrapperDisplay()">
                    Delete
                </button>
                <div id="delete-wrapper" style="display: none; position: absolute; z-index: 1000;">
                    <h1>This action cannot be undone, are you sure you want to delete this employee?</h1>
                    <form action="/destroy-user" method="POST">
                        <input type="hidden" name="ADID" value="<%= e.ADID %>">
                        <input type="submit" value="Delete">
                    </form>
                    <button id="cancel-delete" onclick="changeDeleteWrapperDisplay()">Cancel</button>
                </div> -->

                <div id="employee-detail" >
                    <h1 ><%= e.firstName %> and <%= e.ADID %></h1>
                    <form action="/update-user" method="POST">
                        <input type="text" name="firstName" value="<%= e.firstName %>" required>
                        <input type="text" name="lastName" value="<%= e.lastName %>" required>
                        <input type="hidden" name="ADID" value="<%= e.ADID %>" >
                        <input type="hidden" name="password" value="<%= e.password %>" >

                        <label>
                            <input type="radio" name="role" id="<%= e.ADID %>-Admin" value="Admin">
                            Admin
                        </label>
                        <label>
                            <input type="radio" name="role" id="<%= e.ADID %>-Associate" value="Associate">
                            Associate
                        </label>
                        <input type="submit">
                    </form>
                </div>

                <div id="review-container">
                    <h1>REVIEWS</h1>
                    <ul>
                        <% for(let review of e.reviews){ %> 
                            <li><%= review.content %></li>
                        <% } %>
                    </ul>
                    
                </div>

                <div id="assign-reviews">
                    <form action="/add-pending-reviews" method="POST">
                        <input type="hidden" name="employeeID" value="<%= e.ADID %>">
                        <% for(let emp of employeesList){ %> 
                            <% if(emp.ADID !== user.ADID && emp.ADID !== e.ADID && e.pendingReviews.indexOf(emp.id) === -1){ %>
                                <label>
                                    <input type="checkbox" name="pendingReviews" value="<%= emp.id %>"><%= emp.firstName %>
                                </label>
                            <% } %>
                        <% } %>
                        <input type="submit">
                        
                    </form>
                </div>

            </div>
        <% } %>

        
    
    
    <% }else{ %>
        

    <div id="to-be-reviewed-container">
        <!-- <h1><%= pendingReviews %></h1> -->
        <% if(pendingReviews.length !== 0){ %>
            <h1>Please add a review to the assigned employees.</h1>    
        <% }else{ %>
            <h1>No employees to review.</h1>    
        <% } %>
        <% for(let review of pendingReviews){ %>
            <h2 style="color: red">
                <%= review.firstName %>
                <%= review.lastName %>
            </h2>
            <form action="/submit-employee-review" method="POST">
                <input type="hidden" name="employee" value="<%= review.id %>">
                <textarea name="content" cols="30" rows="3" style="resize: none"></textarea>
                <input type="submit">
            </form>
        <% } %>
    </div>
    
    
    <% } %>

    <script src="/js/script.js"></script>

</body>
</html>